<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/concern_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/concern_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#010407"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="100条热门内容" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/concern_item_but"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/but_item"
        android:text="关注"
        android:gravity="center"
        android:button="@string/no_url"
        android:textColor="#F6F8FA" />

</LinearLayout>